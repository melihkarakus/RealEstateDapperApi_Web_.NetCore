@model CreateBottomGridDtos
@{
    ViewData["Title"] = "CreateBottomGrid";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fuild pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Yeni Alan Ekleme Sayfası</h6>

                <form method="post">
                    <label>Hizmet Başlık</label>
                    <input type="text" asp-for="Title" class="form-control" />
                    <br />
                    <label>Hizmet İkon</label>
                    <input type="text" asp-for="Icon" class="form-control" />
                    <br />
                    <label>Hizmet İçerik</label>
                    <input type="text" asp-for="Description" class="form-control" />
                    <br />
                    <button class="btn btn-success">Veriyi Ekleme</button>
                </form>

            </div>
        </div>
    </div>
</div>

