@model List<RealEstate_Dapper_UI.Dtos.BottomGridDtos.ResultBottomGridDtos>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
    int sayac = 0;
}

<div class="container-fuild pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Öne Çıkan Alanlar Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Hizmet Başlık</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                sayac++;
                                <tr>
                                    <th scope="row">@sayac</th>
                                    <td>@item.Title</td>
                                    <td><a href="/BottomGrid/DeleteBottomGrid/@item.BottomGridID" class="btn btn-danger">Sil</a></td>
                                    <td><a href="/BottomGrid/UpdateBottomGrid/@item.BottomGridID" class="btn btn-success">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/BottomGrid/CreateBottomGrid/" class="btn btn-info">Yeni Alan Girişi</a>

                </div>
            </div>
        </div>
    </div>
</div>

