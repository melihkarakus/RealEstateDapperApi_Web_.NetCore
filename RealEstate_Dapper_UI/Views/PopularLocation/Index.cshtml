@model List<RealEstate_Dapper_UI.Dtos.PopularLocationDtos.ResultPopularLocationDtos>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
    int sayac = 0;
}

<style>
    .img{
        border-radius: 50%;
    }
</style>
<div class="container-fuild pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Lokasyon Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Şehir Adı</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                sayac++;
                                <tr>
                                    <th scope="row">@sayac</th>
                                    <td><img src="@item.ImageUrl" height="50px" width="50px"/>@item.CityName</td>
                                    <td><a href="/PopularLocation/DeletePopularLocation/@item.LocationID" class="btn btn-danger">Sil</a></td>
                                    <td><a href="/PopularLocation/UpdatepopularLocation/@item.LocationID" class="btn btn-success">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/PopularLocation/CreatePopularLocation/" class="btn btn-info">Yeni Lokasyon Girişi</a>

                </div>
            </div>
        </div>
    </div>
</div>
