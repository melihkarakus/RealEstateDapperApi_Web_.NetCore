@model UpdatePopularLocationDtos
@{
    ViewData["Title"] = "UpdatepopularLocation";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fuild pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Yeni Lokasyon Ekleme Sayfası</h6>

                <form method="post">
                    <input type="hidden" asp-for="LocationID" class="form-control" />
                    <label>Lokasyon Başlık</label>
                    <input type="text" asp-for="CityName" class="form-control" />
                    <br />
                    <label>Lokasyon İkon</label>
                    <input type="text" asp-for="ImageUrl" class="form-control" />
                    <br />
                    <button class="btn btn-success">Lokasyon Ekleme</button>
                </form>

            </div>
        </div>
    </div>
</div>
