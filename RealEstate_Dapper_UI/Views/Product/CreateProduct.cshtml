@model CreateProductDtos
@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fuild pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Yeni İlan Ekleme Sayfası</h6>

                <form method="post">
                    <label>İlan Başlığı</label>
                    <input type="text" asp-for="title" class="form-control" />
                    <br />
                    <label>Şehir</label>
                    <input type="text" asp-for="price" class="form-control" />
                    <br />
                    <label>İlçe</label>
                    <input type="text" asp-for="title" class="form-control" />
                    <br />
                    <label>Kategori Adı</label>
                    @Html.DropDownListFor(x=>x.categoryid,(List<SelectListItem>)ViewBag.v, new{@class = "form-control"})
                    <br />
                    <label>Fiyat</label>
                    <input type="text" asp-for="title" class="form-control" />
                    <br />
                    <label>İlan Türü</label>
                    <input type="text" asp-for="title" class="form-control" />
                    <br />
                    <label>Kapak Fotoğrafı</label>
                    <input type="text" asp-for="title" class="form-control" />
                    <br />
                    <label>Açık Adres</label>
                    <textarea asp-for="address" class="form-control" rows="5"></textarea>
                    <br />
                    <button class="btn btn-primary">İlanı Ekle</button>
                </form>

            </div>
        </div>
    </div>
</div>

