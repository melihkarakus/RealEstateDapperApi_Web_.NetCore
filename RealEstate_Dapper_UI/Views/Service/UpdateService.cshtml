@model UpdateServiceDtos
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fuild pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Yeni Hizmet Güncelleme Sayfası</h6>

                <form method="post">
                    <input type="hidden" asp-for="ServiceID" class="form-control" />
                    <label>Hizmet Adı</label>
                    <input type="text" asp-for="ServiceName" class="form-control" />
                    <br />
                    <button class="btn btn-primary">Hizmet Güncelle</button>
                </form>

            </div>
        </div>
    </div>
</div>

