@model List<ResultWhoWeAreDetailDtos>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
    int sayac = 0;
}

<div class="container-fuild pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Biz Kimiz Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Başlık</th>
                                <th scope="col">Alt Başlık</th>
                                <th scope="col">Açıklama 1</th>
                                <th scope="col">Açıklama 2</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                sayac++;
                                <tr>
                                    <th scope="row">@sayac</th>
                                    <td>@item.Title</td>
                                    <td>@item.SubTitle</td>
                                    <td>@item.Description1</td>
                                    <td>@item.Description2</td>
                                    <td><a href="/WhoWeAre/DeleteWhoWeAreDetail/@item.WhoWeAreDetailID" class="btn btn-danger">Sil</a></td>
                                    <td><a href="/WhoWeAre/UpdateWhoWeAreDetail/@item.WhoWeAreDetailID" class="btn btn-success">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/WhoWeAre/CreateWhoWeAreDetail/" class="btn btn-info">Yeni Biz Kimiz Girişi</a>

                </div>
            </div>
        </div>
    </div>
</div>

